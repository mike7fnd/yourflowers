rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bouquets/{bouquetId} {
      // Allow anyone to read any bouquet (for public garden and direct links)
      allow get: if true;
      
      // Allow anyone to query the bouquets collection (for public garden)
      allow list: if true;
      
      // Only allow authenticated users to create new bouquets
      allow create: if request.auth != null;
      
      // Disallow updates and deletes for now
      allow update, delete: if false;
    }
  }
}
